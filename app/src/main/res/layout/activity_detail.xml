<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/img_item_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@id/nama_wisata"
                tools:src="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/nama_wisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama wisata"
                android:textStyle="normal"
                android:textSize="25dp"
                android:typeface="serif"/>

            <TextView
                android:id="@+id/bla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_item_photo"
                android:text="Deskripsi tempat"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <TextView
                android:id="@+id/desc_wisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="deskripsi"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textStyle="normal"
                android:lineSpacingExtra="10dp"
                android:layout_below="@id/bla"
                />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>